<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_gravity="fill" android:id="@+id/video_inner_container" android:background="#ff000000"
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">
    <com.netease.nr.biz.video.MyVideoView android:id="@+id/videoview" android:background="#00000000"
                                          android:layout_width="fill_parent" android:layout_height="fill_parent"
                                          android:layout_centerInParent="true"/>
    <com.netease.nr.biz.video.CustomMediaController android:id="@+id/controller" android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentBottom="true"/>
    <FrameLayout android:id="@+id/progressbar" android:background="#ff000000" android:layout_width="fill_parent"
                 android:layout_height="fill_parent">
        <ProgressBar android:layout_gravity="center" android:layout_width="wrap_content"
                     android:layout_height="wrap_content" style="@style/base_large_progressbar_style"/>
    </FrameLayout>
    <ImageView android:id="@+id/videoclose" android:padding="10.0dip" android:layout_width="wrap_content"
               android:layout_height="wrap_content" android:src="@drawable/biz_news_list_ad_video_close_btn"
               android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
</RelativeLayout>